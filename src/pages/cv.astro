---
import { getEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const page = await getEntry('pages', 'cv');
const { title, seo } = page.data;
const { Content } = await page.render();
---

<BaseLayout title={seo?.title ?? title} description={seo?.description} image={seo?.image} showHeader={false}>
    <h1 class="mb-12 text-2xl leading-tight font-serif italic sm:mb-16 sm:text-4xl">Curriculum Vitae</h1>
    <div class="max-w-none prose prose-dante sm:prose-lg">
        <Content />
    </div>
</BaseLayout>
